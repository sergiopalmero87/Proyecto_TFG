<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardMain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    app:cardBackgroundColor="@color/white"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    app:cardUseCompatPadding="true"
    >

    <LinearLayout
        android:id="@+id/linearLayoutCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/relativeLayoutNoticia"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:padding="5dp"
            tools:ignore="UselessParent">

            <ImageView
                android:id="@+id/imagenCard"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/futbolbalon" />



            <ImageButton
                android:id="@+id/urlVer"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="80dp"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/internet"
                android:background="#EEF9FCFF"
                android:contentDescription="Guardar noticia"
                android:scaleType="centerInside" />

            <TextView
                android:id="@+id/contador"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="150dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:text="0"
                android:textSize="35sp"
                android:textAlignment="center"
                />


            <LinearLayout
                android:id="@+id/linearlayoutTextoNoticia"
                android:orientation="vertical"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/imagenCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="2dp" >

                <TextView
                    android:id="@+id/namePeriodico"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:text="Periodico"
                    android:padding="3dp"
                    android:textSize="20sp"
                    android:fontFamily="@font/roboto"
                    />

                <TextView
                    android:id="@+id/tituloNoticia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:text="Titulo"
                    android:padding="3dp"
                    android:textSize="20sp"
                    android:fontFamily="@font/roboto"
                    />

                <TextView
                    android:id="@+id/textoNoticia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="5dp"
                    android:text="futbol"
                    android:padding="3dp"
                    android:textSize="20sp"
                    android:fontFamily="@font/roboto"
                    />

                <TextView
                    android:id="@+id/fecha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:text="fecha"
                    android:padding="3dp"
                    android:textSize="20sp"
                    android:fontFamily="@font/roboto"
                    />

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
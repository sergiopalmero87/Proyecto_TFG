<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80FFFFFF"
    tools:context=".MainActivity">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/logOut"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="false"
        app:lottie_colorFilter="@color/black"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/out"
        app:lottie_speed="2.0" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/config"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toLeftOf="@+id/logOut"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="false"
        app:lottie_colorFilter="@color/black"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/configuracion"
        app:lottie_speed="2.0" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/verNoticiasGuardadas"
        android:layout_width="55dp"
        android:layout_height="55dp"
        app:layout_constraintRight_toLeftOf="@+id/config"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="false"
        app:lottie_speed="2.0"
        app:lottie_loop="true"
        app:lottie_colorFilter="@color/black"
        app:lottie_rawRes="@raw/saved"
        />

    <TextView
        android:id="@+id/nombreAppMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="15dp"
        android:textSize="30sp"
        android:layout_marginTop="19dp"
        android:text="SportHub"
        android:textColor="@color/black"
        android:textStyle="italic"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewMain"
        android:layout_width="409dp"
        android:layout_height="665dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logOut" />


</androidx.constraintlayout.widget.ConstraintLayout>
